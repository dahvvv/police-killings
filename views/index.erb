<div id='container' class="">
  <div id='content'>
    <div id='filters-container'>
      <button class="button-filter filter-type" id="usPop-filter">Population</button>
      <%= erb :'_fifty_states_dropdown' %>
      <button class="button-filter" id="race-filter">Race</button>
      <form id="race-selection">
        <input type="checkbox" id="select-alaskan" name="alaskan" value="alaskan" checked />Alaskan / <br>Pacific Islander<br>
        <input type="checkbox" id="select-asian" name="asian" value="asian" checked />Asian<br>
        <input type="checkbox" id="select-black" name="black" value="black" checked />Black<br>
        <input type="checkbox" id="select-hispanic" name="hispanic" value="hispanic" checked />Hispanic / Latin<br>
        <input type="checkbox" id="select-white" name="white" value="white" checked />White<br>
        <input type="checkbox" id="select-other" name="other" value="other" checked />Other<br>
        <input class="race-selection-submit" type="submit" />
      </form>
      <button class="button-filter" id="age-filter">Age</button>
      <form id="age-range">
        <label for="age-min">Age Min:</label>
        <input type="text" id="age-min" name="age-min" />
        <label for="age-max">Age Max:</label>
        <input type="text" id="age-max" name="age-max" />
        <input class="age-range-submit" type="submit" />
      </form>
      <button class="button-filter" id="unarmed">Armed</button>
    </div>

    <div id='weights-container'>
      <span class="button-header" id="weights-header">Weight By:</span>
      <button class="button-weight " id="usPop-weight">Population</button>
    </div>

    <div id="infovis">
      <div id='map-one' class='map'></div>
    </div>

    <button class="display-selector display-type" id="heatmaps-selector">Heatmap</button>
    <button class="display-selector" id="markers-selector">Marker Map</button>
    <button class="display-selector" id="graphs-selector">Graph</button>
  </div>

  <div class="program">
    <p class="program-text">People killed by police officers in the United States.</p>
  </div>
</div>
